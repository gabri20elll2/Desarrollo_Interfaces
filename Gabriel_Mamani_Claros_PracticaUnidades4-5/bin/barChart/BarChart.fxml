                      <NumberAxis animated="false" label="Valor" side="LEFT" />
                    </yAxis>
                  </BarChart>
               </children></AnchorPane>
      </content>
    </Tab>
    <Tab text="StackedBarChart">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <StackedBarChart fx:id="stackedBarChart" categoryGap="50.0" title="Resumen de país">
                    <xAxis>
                      <CategoryAxis label="País" side="BOTTOM" fx:id="xAxisStacked" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis label="Suma actual" side="LEFT" />
                    </yAxis>
                  </StackedBarChart>
               </children></AnchorPane>
      </content>
    </Tab>
  </tabs>
</TabPane>
